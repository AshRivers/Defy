 <h1>Listing users</h1>

<ul>
<% @users.each do |user| %>
    <li>
      	<%= link_to user.name, user %></br>
    	Your email:<%= user.email %></br>
    	<%= image_tag user.image_url(:thumb) if user.image? %></br>
    	<%= link_to 'Edit', edit_user_path(user) %></br>
    	<%= button_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></br>
  	</li>
<% end %>
</ul>
