<h1>Storypoints - index</h1>
<p>
	<%= link_to "All Storypoints", all_stp_path %> | 
	<%= link_to "Personal storypoints", storypoints_path %>
</p>
<ul>
<% @storypoints.each do |stp| %>
	<li>
		<%= link_to stp.name, plot_storypoint_path(stp.plot_id,stp) %>
	</br>
		Belongs to <%= link_to Plot.find(stp.plot_id).name, plot_path(stp.plot_id) %> 
	</br>
		<% if Plot.find_by_id(stp.plot_id).user_id == current_user.id %>

			<%= link_to 'Edit', edit_plot_storypoint_path(stp.plot_id,stp) %>

			<%= button_to "Delete", plot_storypoint_path(stp.plot_id,stp), :method => :delete,
	 			data: {confirm: "Are you sure?"}, title: "Delete this" %>
	 	<% end %>
	</li>
<% end %>
</ul>